---
import { Image } from "astro:assets";
import {
  ArrowUpRight,
  Github,
  Heart,
  MessageSquare,
  Twitter,
} from "lucide-astro";
import Logo from "./logo.astro";

const links = {
  product: [
    { name: "Documentation", href: "/quick-start" },
    { name: "GitHub", href: "https://github.com/usekaneo/kaneo" },
    { name: "Demo", href: "https://demo.kaneo.app" },
  ],
  community: [
    { name: "Twitter", href: "https://twitter.com/usekaneo" },
    { name: "Discord", href: "https://discord.gg/rU4tSyhXXU" },
    {
      name: "Discussions",
      href: "https://github.com/orgs/usekaneo/discussions",
    },
  ],
};
---

<footer
  class="relative bg-white dark:bg-zinc-950 border-t border-zinc-200 dark:border-zinc-800"
>
  <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div class="space-y-4">
        <Logo />
        <div class="flex items-center mt-4 gap-2 text-sm">
          <span class="text-zinc-500 dark:text-zinc-400">Built with</span>
          <Heart class="h-4 w-4 text-red-500 animate-pulse" />
          <span class="text-zinc-500 dark:text-zinc-400">in</span>
          <div class="relative group">
            <Image
              src="https://flagcdn.com/w40/mk.png"
              width="20"
              height="10"
              class="inline-block transition-transform group-hover:scale-110"
              alt="Macedonia"
            />
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">
          Product
        </h3>
        <ul class="space-y-3">
          {
            links.product.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group inline-flex items-center gap-1 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-zinc-100 transition-colors"
                >
                  {link.name}
                  <ArrowUpRight class="h-3 w-3 transition-transform group-hover:translate-x-0.5 group-hover:-translate-y-0.5" />
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">
          Community
        </h3>
        <ul class="space-y-3">
          {
            links.community.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group inline-flex items-center gap-1 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-zinc-100 transition-colors"
                >
                  {link.name}
                  <ArrowUpRight class="h-3 w-3 transition-transform group-hover:translate-x-0.5 group-hover:-translate-y-0.5" />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</footer>
